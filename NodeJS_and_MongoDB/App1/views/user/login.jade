extends ../layout

block content
        form.col-md-4.content-center( method="post")
            .form-group
                label Email address
                input#userEmail.form-control(type='email', name="email", aria-describedby='emailHelp', placeholder='Enter email')
                small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
            .form-group
                label Password
                input#userPass.form-control(type='password', name="password", placeholder='Password')
            button.btn.btn-primary(type='submit') LOGIN
