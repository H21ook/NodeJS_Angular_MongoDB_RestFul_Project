
extends ../layout

block content

    .container
      .card.text-white.bg-dark.mb-3(style='max-width: 100%;')
        .card-header Header
        .card-body
          .row
            .col
              img(src='/#{proImage}', alt='image', width='300px')
            .col
              h4#name.card-title Name: #{proName}
              h5.card-text Price: #{proPrice}
              form(method='POST' action='')
                button.btn.btn-primary(type='submit') DELETE

  script(src='/src/js/productController.js')
  script(src='/src/js/angular.min.js')
  script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
